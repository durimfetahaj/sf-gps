generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  accounts      Account[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Driver {
  id              String    @id @default(cuid())
  fullName        String
  hasDiscrepancy  Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  employmentStart DateTime?
  workLogs        WorkLog[]
  vehicles        Vehicle[] @relation("DriverToVehicle")

  @@map("drivers")
}

model Vehicle {
  id              String    @id @default(cuid())
  licensePlate    String    @unique
  manufacturer    String?
  modelType       String?
  serialNumber    String?
  chassisNumber   String?
  nextInspection  DateTime?
  spCheck         DateTime?
  uvvCheck        DateTime?
  craneInspection DateTime?
  mileage         Int?
  hasGps          Boolean?
  notes           String?
  workLogs        WorkLog[]
  drivers         Driver[]  @relation("DriverToVehicle")
  services        Service[] // relation to service/workshop records

  @@map("vehicles")
}

model Service {
  id          String   @id @default(cuid())
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId   String
  date        DateTime
  type        String // e.g., "Inspection", "Repair", "Oil Change", "Crane Check"
  kmStand     Int?
  ticketNr    String? // corresponds to T.-Nr
  description String? // corresponds to Bezeichnung
  quantity    Int? // corresponds to menge
  comment     String? // additional notes

  @@map("services")
}

model WorkLog {
  id              String   @id @default(cuid())
  driverId        String
  vehicleId       String?
  foreman         String
  gpsStartTime    String
  gpsEndTime      String
  breakTime       Int
  reportStartTime String
  reportEndTime   String
  reportBreak     Int
  difference      Int?
  comment         String?
  km              Float?
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())
  date            DateTime
  driver          Driver   @relation(fields: [driverId], references: [id])
  vehicle         Vehicle? @relation(fields: [vehicleId], references: [id])

  @@map("work_logs")
}
