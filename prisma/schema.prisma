generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id              String    @id @default(cuid())
  fullName        String
  hasDiscrepancy  Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  employmentStart DateTime?
  vehicles        Vehicle[]
  workLogs        WorkLog[]

  @@map("drivers")
}

model VehicleEquipment {
  id           String    @id @default(cuid())
  vehicleId    String
  name         String
  type         String?
  partNumber   String?
  serialNumber String?
  installedAt  DateTime?
  removedAt    DateTime?
  notes        String?
  vehicle      Vehicle   @relation(fields: [vehicleId], references: [id])

  @@map("vehicle_equipments")
}

model Vehicle {
  id              String             @id @default(cuid())
  licensePlate    String             @unique
  manufacturer    String?
  modelType       String?
  serialNumber    String?
  chassisNumber   String?
  nextInspection  DateTime?
  spCheck         DateTime?
  uvvCheck        DateTime?
  craneInspection DateTime?
  hasGps          Boolean?
  notes           String?
  driverId        String?
  mileage         Int?
  services        Service[]
  equipments      VehicleEquipment[]
  driver          Driver?            @relation(fields: [driverId], references: [id])
  workLogs        WorkLog[]

  @@map("vehicles")
}

model Service {
  id          String   @id @default(cuid())
  vehicleId   String
  date        DateTime
  type        String
  kmStand     Int?
  ticketNr    String?
  description String?
  quantity    Int?
  comment     String?
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])

  @@map("services")
}

model WorkLog {
  id              String   @id @default(cuid())
  vehicleId       String
  comment         String?
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())
  date            DateTime
  driverId        String
  gpsStartTime    String
  gpsEndTime      String
  breakTime       String?
  reportStartTime String
  reportEndTime   String
  difference      Int?
  km              Int?
  driver          Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)
  vehicle         Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("work_logs")
}
