generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id              String    @id @default(cuid())
  fullName        String
  hasDiscrepancy  Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  employmentStart DateTime?
  vehicles        Vehicle[]
  workLogs        WorkLog[]

  @@map("drivers")
}

model Worker {
  id              String    @id @default(cuid())
  fullName        String
  email           String?   @unique
  phone           String?
  hourlyRate      Float?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  employmentStart DateTime?

  workLogs    WorkLog[]
  assignments Assignment[]

  @@map("workers")
}

model Assignment {
  id         String    @id @default(cuid())
  workerId   String?
  vehicleId  String?
  assignedAt DateTime  @default(now())
  returnedAt DateTime?

  worker  Worker?          @relation(fields: [workerId], references: [id])
  vehicle Vehicle?         @relation(fields: [vehicleId], references: [id])
  items   AssignmentItem[]
}

model AssignmentItem {
  id           String @id @default(cuid())
  assignmentId String
  itemId       String
  quantity     Int    @default(1)

  assignment Assignment    @relation(fields: [assignmentId], references: [id])
  item       InventoryItem @relation(fields: [itemId], references: [id])
}

model InventoryItem {
  id   String @id @default(cuid())
  name String @unique

  quantity Int

  type String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments AssignmentItem[]
}

model Vehicle {
  id              String       @id @default(cuid())
  licensePlate    String       @unique
  manufacturer    String?
  serialNumber    String?
  chassisNumber   String?
  nextInspection  DateTime?
  spCheck         DateTime?
  uvvCheck        DateTime?
  craneInspection DateTime?
  mileage         Float?
  hasGps          Boolean?
  driverId        String?
  model           String?
  driver          Driver?      @relation(fields: [driverId], references: [id])
  workLogs        WorkLog[]
  assignments     Assignment[]

  @@map("vehicles")
}

model WorkLog {
  id              String   @id @default(cuid())
  driverId        String
  vehicleId       String
  gpsStartTime    String
  gpsEndTime      String
  breakTime       String?
  reportStartTime String
  reportEndTime   String
  difference      String?
  comment         String?
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())
  date            DateTime
  km              Float?
  driver          Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)
  vehicle         Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  worker          Worker?  @relation(fields: [workerId], references: [id])
  workerId        String?

  @@map("work_logs")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
